{{#if data}}
  {{#each data}}
    {{#if title}}
      <div
        class="container rounded-4 col-xxl-4 col-xl-6 col-lg-6 col-md-8 col-sm-8 col-8 bg-secondary bg-opacity-50 mt-3"
      >
        <form
          id="form"
          class="py-4 p-5"
          action="/editf"
          method="post"
          enctype="multipart/form-data"
        >
          <h2 class="text-center">Edicion</h2>
          <div class="mb-3 mt-3 d-flex align-items-center">

            <input id="idd" name="idd" type="hidden" value="{{this._id}}" />
            <input id="type" name="type" type="hidden" value="{{@root.type}}" />

            <label for="title" class="form-label me-4">Nombre</label>
            <input
              autofocus
              type="text"
              class="form-control"
              id="title"
              name="title"
              value="{{this.title}}"
            />
          </div>

          {{#if @root.categories.length}}
            <div class="mb-3 d-flex align-items-center">
              <label for="category" class="form-label mx-2">Categoria</label>
              <select
                class="form-select border border-success"
                aria-label="Default select example"
                name="category"
              >
                <option selected>Seleccionar categoria</option>
                {{#each @root.categories}}
                  {{#each this}}
                    {{#if this.title}}
                      <option value={{this.category}}>{{this.category}}
                      </option>
                    {{/if}}
                  {{/each}}
                {{/each}}
              </select>
            </div>
          {{else}}
            <div class="mb-3 mt-3 d-flex align-items-center">
              <label for="category" class="form-label me-4">Categoria</label>
              <input
                type="text"
                class="form-control"
                id="category"
                name="category"
                value={{this.category}}
              />
            </div>
          {{/if}}

          {{#if this.status}}
            <div class="form-check form-switch ps-2 d-flex">
              <label
                class="form-check-label me-3"
                for="flexSwitchCheckChecked"
              >Status</label>
              <input
                class="form-check-input mx-3 mb-4"
                type="checkbox"
                role="switch"
                id="flexSwitchCheckChecked"
                name="status"
                checked
              />
            </div>
          {{/if}}

          <div class="mb-3 d-flex align-items-center">
            <label
              for="exampleInputPassword1"
              class="form-label mx-2"
            >Imagen</label>

            <input
              class="form-control border border-success"
              type="file"
              id="imageCat"
              name="imageCat"
            />
          </div>

          <div class="mb-1">
            <button
              id="enviar"
              class="btn btn-primary"
              type="submit"
            >Enviar</button>
          </div>
        </form>
      </div>
    {{/if}}
  {{/each}}
{{/if}}