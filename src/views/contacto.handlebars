<div class="text-center mt-3">
  <a href="/" class="btn btn-primary">Inicio</a>
</div>

<div class="">
  <form
    action="/message"
    method="post"
    class="w-50 my-4 mx-auto border border-success p-4 rounded-4"
    id="form"
  >
    <div class="form-group">
      <label for="email" class="mb-2">Nombre:</label>
      <input
        class="form-control border border-primary-subtle"
        id="email"
        name="name"
      />
    </div>
    <div class="form-group my-2">
      <label for="pwd" class="mb-2">Email / Contacto:</label>
      <input
        class="form-control border border-primary-subtle"
        id="pwd"
        name="contact"
      />
    </div>

    <div class="mb-3">
      <label
        for="exampleFormControlTextarea1"
        class="form-label mb-2"
      >Mensaje</label>
      <textarea
        class="form-control border border-primary-subtle"
        id="exampleFormControlTextarea1"
        rows="3"
        name="message"
      ></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
  </form>
</div>

{{#if msg}}
  <div class="text-center alert alert-{{alert}}" role="alert">
    {{msg}}
  </div>
{{/if}}